<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    tools:context=".ReportpageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        style="@style/HEADER">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="14dp"
            android:text="REPORT"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp">
                <TextView
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="VIOLATION :"
                    style="@style/TEXT"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="330dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="31dp">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_violation"
                        android:layout_width="330dp"
                        android:layout_height="70dp"
                        android:background="@drawable/edt_background"
                        android:textColor="@color/black"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="VEHICLE PLATE NUMBER :"
                    android:textStyle="bold"
                    style="@style/TEXT"/>

                <EditText
                    android:id="@+id/plateNumber"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="31dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edt_background"
                    android:textAlignment="textStart"></EditText>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="VEHICLE TYPE :"
                    style="@style/TEXT"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="330dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="31dp">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_vehicletype"
                        android:layout_width="330dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:background="@drawable/edt_background"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="VEHICLE COLOR :"
                    style="@style/TEXT"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="330dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="31dp">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_vehiclecolor"
                        android:layout_width="330dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:background="@drawable/edt_background"
                        android:inputType="none"
                        tools:ignore="SpeakableTextPresentCheck" />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/PhotoText"
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="PHOTOS :"
                    android:textStyle="bold"
                    style="@style/TEXT"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pick"
                    style="@style/Button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PhotoText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="123dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="138dp"
                    android:text="Pick" />

                <TextView
                    android:id="@+id/totalPhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pick"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_below="@+id/pick"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/VideoText"
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="VIDEOS :"
                    android:textStyle="bold"
                    style="@style/TEXT"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/UpVid"
                    style="@style/Button"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/VideoText"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:text="Upload Video" />

                <TextView
                    android:id="@+id/vidname"
                    android:layout_width="224dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/VideoText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:layout_toEndOf="@+id/UpVid"
                    android:background="@drawable/edt_background"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Upload Video"></TextView>

                <TextView
                    android:id="@+id/totalVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UpVid"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/vid"
                    android:layout_below="@+id/UpVid"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/RemarkText"
                    android:layout_width="330dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="REMARKS :"
                    style="@style/TEXT"/>


                <EditText
                    android:id="@+id/remark"
                    android:layout_width="330dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/RemarkText"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/edt_background"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:hint="Message"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/Button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerInParent="true"
                    android:text="Submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>