<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LtoReportingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00C988</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#2c3333</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#e9eaea</item>
    </style>

    <style name="HEADER">
        <item name="android:color">#232828</item>
        <item name="android:backgroundTint">#232828</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">#808484</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--HOME PAGE-->
    <style name="FAB">
        <item name="backgroundTint">#00C988</item>
    </style>

    <!--SETTING PAGE-->
    <style name="BGSETTING">
        <item name="android:backgroundTint">#bfc1c1</item>
    </style>

    <!--Violation List-->
    <style name="ListText">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>