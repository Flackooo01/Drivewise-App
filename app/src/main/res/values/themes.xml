<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LtoReportingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A19882</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C7B198</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light mode -->
    <!-- screen background if light mode on -->

    <style name="SCREEN">
        <item name="android:background">#d8d4cc</item>
    </style>

    <!-- texts background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#434242</item>
    </style>

    <style name="HEADER">
        <item name="android:color">#A19882</item>
        <item name="android:backgroundTint">#A19882</item>
    </style>

    <!--SETTING PAGE-->
    <style name="BGSETTING">
        <item name="android:backgroundTint">#E6DDC6</item>
    </style>

    <!-- LOGIN PAGE -->
    <style name="Title">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold </item>
    </style>
    <style name="Subtitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="startIconTint">@color/primary_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">#C2B8A3</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--HOME PAGE-->
    <style name="FAB">
        <item name="backgroundTint">#C7B198</item>
    </style>

    <!--Setting Switch-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
    </style>

    <!--Style for round Image-->
    <style name="roundimageview" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>
    

</resources>